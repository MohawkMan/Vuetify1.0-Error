@using Microsoft.AspNetCore.Identity
@using VBL.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>VolleyballLife @ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans:400italic,300,400,700,800,100%7CRaleway:400,700%7CHandlee:regular&amp;subset=latin,latin-ext">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/Main.css">
    <link rel="stylesheet" href="~/css/Preloader.css">
    <link rel="stylesheet" href="~/css/Headline.css">
</head>
<body>
    @await Html.PartialAsync("_PublicNav")
    <div class="container body-content">
        <div class="preloader d-flex align-items-center">
            <img src="~/images/VBL-Logo-Stamp.jpg" class="img-fluid mx-auto d-block align-middle" alt="Welcome to Volleyball Life!" />
        </div>
        <h2 class="headline-underline">
            @ViewData["Title"]
            @if (ViewData["Subtitle"] != null)
            {
                <br />
                <span style="font-size:smaller">@ViewData["Subtitle"]</span>
            }
        </h2>
        @RenderBody()
        <hr />
        <footer>
            <p class="t-xs">&copy; 2008 - @DateTime.Now.ToString("yyyy") VolleyballLife.com. All rights reserved.</p>
        </footer>
        <environment names="Development">
            <p>Boostrap: <span id="bootSize"></span></p>
        </environment>
    </div>
    <script type="text/javascript" src="~/js/main.js"></script>
</body>
</html>
